/*
 * Roboto Font Weigh:
 * Thin: 100
 * Light: 200
 * Regular: 400
 * Medium: 500
 * Bold: 600
 * Black: 900
 */

QLabel {
    padding: 8 0 4 0;
    font-family: Roboto;
    font-weight: 400;
    font-size: 10px;
}

/******************* QLineEdit *******************/

QLineEdit:enabled {
    border-style: solid;
    border-width: 0 0 1 0;
    border-color: rgba(0, 0, 0, 42%);
    background-color: transparent;
    color: rgba(0, 0, 0, 54%);
    padding: 8 0 4 0;
    font-family: Roboto;
    font-size: 16px;
}

QLineEdit:disabled {
    border-style: dotted;
    border-width: 0 0 1 0;
    border-color: rgba(0, 0, 0, 42%);
    background-color: transparent;
    color: rgba(0, 0, 0, 38%);
    padding: 8 0 4 0;
}

QLineEdit:hover:!focus {
    border-style: solid;
    border-width: 0 0 2 0;
    border-color: rgba(0, 0, 0, 87%);
    background-color: transparent;
    color: rgba(0, 0, 0, 54%);
    padding: 8 0 4 0;
}

QLineEdit:focus {
    border-style: solid;
    border-width: 0 0 2 0;
    border-color: rgba(0, 0, 0, 100%);
    background-color: transparent;
    color: rgba(0, 0, 0, 87%);
    padding: 8 0 4 0;
    selection-background-color: rgba(0, 0, 0, 87%);
}


/******************* QComboBox *******************/


/* pulsante qcombobox */
/* ho rimosso gli 8px di padding top e bottom
   e li ho aggiunti come margin*/
QComboBox {
    /*padding: 8px 0px 8px 12px;
    margin: 0px 8px 0px 0px;*/
    padding-left: 12px;
    margin: 8px 8px 8px 0px;
    font-family: Roboto;
    font-weight: 400;
    font-size: 16px;
    border: none;
/*    background-color: rgba(0, 0, 0, 0%);*/
    /*background-color: qradialgradient(cx:0, cy:0.2, radius: 10,
                    fx:0.5, fy:0.1, stop:0 white, stop:0.5 green);*/
    background-clip: margin;
}

/* vista del menu a discesa */
QComboBox QAbstractItemView {
    padding: 8px 0px 8px 0px;
    border-style: solid;
    border-color: #E0E0E0;
    /*border-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 red,
        stop: 0.4 yellow,
        stop: 0.5 green,
        stop: 1.0 blue);*/
    border-top-width: 1px;
    border-left-width: 1px;
    border-bottom-width: 2px;
    border-right-width: 2px;
/*    background-color: blue;*/
    background-clip: margin;
}

/* item del menu a discesa */
QComboBox::item {
    border: none;
    padding: 0px 0px 0px 12px;
    min-height: 32px;
    max-height: 32px;
    font-family: Roboto;
    font-weight: 400;
    font-size: 15px;
}

QComboBox::item:selected {
    background-color: rgba(0, 0, 0, 87%);
    color: white;
}

QComboBox:indicator {
    image: none;
}

QComboBox::drop-down {
    border: none;
    margin: 0px 16px 0px 0px;
}

QComboBox::down-arrow {
    image: url(":/icons/dropdown");
    width: 24px;
    height: 24px;
}

/******************* QSpinBox *******************/

QSpinBox:enabled {
    border-style: solid;
    border-width: 0 0 1 0;
    border-color: rgba(0, 0, 0, 42%);
    background-color: transparent;
    color: rgba(0, 0, 0, 54%);
    padding: 8 0 4 0;
    font-family: Roboto;
    font-size: 16px;
}

QSpinBox:disabled {
    border-style: dotted;
    border-width: 0 0 1 0;
    border-color: rgba(0, 0, 0, 42%);
    background-color: transparent;
    color: rgba(0, 0, 0, 38%);
    padding: 8 0 4 0;
}

QSpinBox:hover:!focus {
    border-style: solid;
    border-width: 0 0 2 0;
    border-color: rgba(0, 0, 0, 87%);
    background-color: transparent;
    color: rgba(0, 0, 0, 54%);
    padding: 8 0 4 0;
}

QSpinBox:focus {
    border-style: solid;
    border-width: 0 0 2 0;
