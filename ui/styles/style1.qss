}

QSpinBox::up-button {
    width: 0px;
}

QSpinBox::down-button {
    width: 0px;
}


/******************* QCheckBox *******************/

QCheckBox::indicator:unchecked {
    image: url(:/icons/checkboxOutline);
    width: 24px;
    height: 24px;
}

QCheckBox::indicator:checked {
    image: url(:/icons/checkbox);
    width: 24px;
    height: 24px;
}


#scrollAreaWidgetContents {
    background-color: white;
}

